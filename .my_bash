# Resume or start tmux session
tm ()
{
	if which tmux >/dev/null 2>&1; then
		# if no session is started, start a new session
		test -z ${TMUX} && tmux

		# when quitting tmux, try to attach
		while test -z ${TMUX}; do
			tmux attach || break
		done
	fi
}

if [ -f ~/.dotfiles/.my_aliases ]; then
	source ~/.dotfiles/.my_aliases
fi

# colored prompt
export PS1="\[\033[38;5;248m\]\u\[$(tput sgr0)\]\[\033[38;5;253m\]@\[$(tput sgr0)\]\[\033[38;5;113m\]\H\[$(tput sgr0)\]\[\033[38;5;15m\]:\[$(tput sgr0)\]\[\033[38;5;111m\]\w\[$(tput sgr0)\]\[\033[38;5;15m\]\n\[$(tput sgr0)\]\[\033[38;5;253m\]\\$\[$(tput sgr0)\]\[\033[38;5;15m\] \[$(tput sgr0)\]"

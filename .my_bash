# Resume or start tmux session
tm ()
{
	if command -v tmux >/dev/null 2>&1; then
        tmux attach || tmux new
	fi
}

# Add + commit + push git in current dir, takes commit msg as param
gdrop ()
{
    git add . && git commit -a -m"$1" && git push
}

